<% layout('layouts/boilerplate') %>
<div id="header">
    <h1 class="mb-5">Stay connected with your friends!</h1>
</div>
<div class="mx-3">
    <div id="input_box">
        <form class="validation-required" action="/signup" method="POST" novalidate>
            <%- include('../partials/flash') %>
            <h3 class="text-center mb-3">Sign up</h3>
            <div class="row g-2">
                <div class="col-md">
                    <div class="form-floating mb-3">
                        <input type="text" class="form-control" id="first" name="firstName" placeholder="name@example.com" required>
                        <label for="first">First name</label>
                        <div class="invalid-feedback">
                            We need your first name!
                        </div>
                    </div>
                </div>
                <div class="col-md">
                    <div class="form-floating mb-3">
                        <input type="text" class="form-control" id="lastName" name="lastName" placeholder="name@example.com" required>
                        <label for="lastName">Last name</label>
                        <div class="invalid-feedback">
                            We need your surname!
                        </div>
                    </div>
                </div>
            </div>
            <div class="form-floating mb-3">
                <input type="email" class="form-control" id="email" name="email" placeholder="name@example.com" required>
                <label for="email">Email address</label>
                <div class="invalid-feedback">
                    Email is needed to ensure only students have access.
                </div>
            </div>
            <div class="form-floating mb-3">
                <input type="number" class="form-control" id="phone" name="phone" placeholder="0000000000" required>
                <label for="phone">Phone number</label>
                <div class="invalid-feedback">
                    Your phone number is the whole point of this site.
                </div>
            </div>
            <div class="form-floating mb-3">
                <input type="password" class="form-control" id="password" name="password" placeholder="Password" required>
                <label for="password">Password</label>
                <div class="invalid-feedback">
                    You need this! Minimum 10 characters.
                </div>
            </div>
            <button type="submit" class="btn btn-primary w-100">Sign up</button>
        </form>
    </div>
</div>
